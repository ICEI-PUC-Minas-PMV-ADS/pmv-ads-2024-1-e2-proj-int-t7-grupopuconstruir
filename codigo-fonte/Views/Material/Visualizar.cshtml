@model MaterialModel

@{
    ViewBag.Title = "Visualizar";
}

<div>
    <div> 
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Visualizar material</h1>
            </div>
            <div class="modal-body">

                <div data-mdb-input-init>
                    <label for="descricao">Descrição:</label>
                    <input type="text" readonly maxlength="120" class="form-outline mb-4 form-control form-control-lg form-projeto" id="descricao" placeholder="Descrição do Material" asp-for="Descricao">
                </div>

                <div data-mdb-input-init>
                    <label for="valorPadrao">Valor da Unidade:</label>
                    <input type="number" readonly maxlength="18" min="0" step="0.01" class="form-outline mb-4 form-control form-control-lg form-projeto" id="valorPadrao" placeholder="Preço da Unidade do Material" asp-for="ValorPadrao">
                </div>

                <div data-mdb-input-init>
                    <label for="altura">Quantidade:</label>
                    <input type="number" readonly maxlength="18" min="0" step="0.01" class="form-outline mb-4 form-control form-control-lg form-projeto" id="quantidade" placeholder="Quantidade do Material" asp-for="Quantidade">
                </div>

                <div data-mdb-input-init>
                    <label for="um">Unidade de Medida:</label>
                    <input type="text" readonly maxlength="10" class="form-outline mb-4 form-control form-control-lg form-projeto" id="um" placeholder="Unidade de Medida do Material" asp-for="Um">
                </div>

                <div data-mdb-input-init>
                    <label for="altura">Altura:</label>
                    <input type="number" readonly maxlength="18" min="0" step="0.01" class="form-outline mb-4 form-control form-control-lg form-projeto" id="altura" placeholder="Altura do Material" asp-for="Altura">
                </div>

                <div data-mdb-input-init>
                    <label for="largura">Largura:</label>
                    <input type="number" readonly maxlength="18" min="0" step="0.01" class="form-outline mb-4 form-control form-control-lg form-projeto" id="largura" placeholder="Largura do Material" asp-for="Largura">
                </div>

                <div data-mdb-input-init>
                    <label for="comprimento">Comprimento:</label>
                    <input type="number" readonly maxlength="18" min="0" step="0.01" class="form-outline mb-4 form-control form-control-lg form-projeto" id="comprimento" placeholder="Comprimento do Material" asp-for="Comprimento">
                </div>

                <div data-mdb-input-init>
                    <label for="peso">Peso:</label>
                    <input type="number" readonly maxlength="18" min="0" step="0.01" class="form-outline mb-4 form-control form-control-lg form-projeto" id="peso" placeholder="Peso do Material" asp-for="Peso">
                </div>

                <div data-mdb-input-init>
                    <label for="cor">Cor:</label>
                    <input type="text" readonly maxlength="20" class="form-outline mb-4 form-control form-control-lg form-projeto" id="cor" placeholder="Cor do Material" asp-for="Cor">
                </div>
            </div>

            <div class="modal-footer">
                <a asp-area="" asp-controller="Material" asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </div>
    </div>
</div>
