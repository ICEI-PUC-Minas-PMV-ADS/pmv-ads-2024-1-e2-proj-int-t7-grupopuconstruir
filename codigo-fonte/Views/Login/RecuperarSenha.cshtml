@model RecuperarSenhaModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "RecuperarSenha";
}


@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<section class="mh-100 mb-4">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10" style="max-width: 700px">

                <div class="card" style="border-radius: 0 0 1rem 1rem;">
                    <div class="row g-0">
                        <div class="col-md-12 col-lg-12 d-flex align-items-center">
                            <div class="card-body p-4 text-black">

                                <form asp-action="RecuperarSenha" method="post">

                                    <div style="justify-content:center" class=" d-flex align-items-center mb-3 pb-1">
                                        <span class="h1 fw-bold mb-0">Esqueci a Senha</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Preencha os campos abaixo para prosseguir:</h5>

                                    <div id="blocoEmail" data-mdb-input-init class="form-outline mb-4 form-control form-control-lg blocoForm">
                                        <i style="color:grey;" class="fa-solid fa-envelope"></i>
                                        <input asp-for="Email" type="email" class="form-control form-control-lg form-login" placeholder="E-mail" />
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button type="submit" style="width: 100%" data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg btn-block mb-2" type="button">Redefinir Senha</button>
                                        <a asp-area="" asp-controller="Login" asp-action="Index" class="btn btn-secondary btn-lg" style="width: 100%" data-mdb-button-init data-mdb-ripple-init>Voltar</a>
                                    </div>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


