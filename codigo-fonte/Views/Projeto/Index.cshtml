        <!-- Botao excluir -->
        <button type="button" class="btn btn-lg btn-block btnCrud" data-bs-toggle="modal" data-bs-target="#MyModalExcluir">
            <i class="fa-solid fa-trash-can"></i>
        </button>
    </div>
</div>

@section scripts {
    <script>
        $(function () {
            $(".deletar").click(function () {
                $("#modal").load("DeletarProjeto", function () {
                    $("#modal").modal();
                })
            });
        })
    </script>
}
