@{
    ViewData["Title"] = "Projetos";
}

<div id="ProjetosTitulo">
    <h1>@ViewData["Title"]</h1>
    <button type="button" class="btn btn-dark btn-lg btn-block" data-bs-toggle="modal" data-bs-target="#MyModalAdicionar" asp-controller="Projeto" asp-action="Criar">
        Adicionar projeto +
    </button>
</div>

<div id="listaStl">
    <div class="NomeDoProjeto">
        <h5>Nome do projeto</h5>
    </div>
    <div class="BotaoLateral">
        <!-- Botao visualizar -->
        <button type="button" class="btn btn-lg btn-block btnCrud" data-bs-toggle="modal" data-bs-target="#MyModalPesquisar" asp-controller="Projeto" asp-action="Visualizar">
            <i class="fa-solid fa-magnifying-glass"></i>
        </button>
        <!-- Botao editar -->
        <button type="button" class="btn btn-lg btn-block btnCrud" data-bs-toggle="modal" data-bs-target="#MyModalEditar" asp-controller="Projeto" asp-action="Editar">
            <i class="fa-solid fa-pencil"></i>
        </button>
        <!-- Botao excluir -->
        <button type="button" id="deletar" class="btn btn-lg btn-block btnCrud" data-bs-toggle="modal" data-bs-target="#MyModalExcluir" asp-controller="Projeto" asp-action="Deletar">
            <i class="fa-solid fa-trash-can"></i>
        </button>
    </div>
</div>
<div id="listaStl">
    <div class="NomeDoProjeto">
        <h5>Nome do projeto</h5>
    </div>
    <div class="BotaoLateral">
        <!-- Botao visualizar -->
        <button type="button" class="btn btn-lg btn-block btnCrud" data-bs-toggle="modal" data-bs-target="#MyModalPesquisar">
            <i class="fa-solid fa-magnifying-glass"></i>
        </button>
        <!-- Botao editar -->
        <button type="button" class="btn btn-lg btn-block btnCrud" data-bs-toggle="modal" data-bs-target="#MyModalEditar">
            <i class="fa-solid fa-pencil"></i>
        </button>
        <!-- Botao excluir -->
        <button type="button" class="btn btn-lg btn-block btnCrud" data-bs-toggle="modal" data-bs-target="#MyModalExcluir">
            <i class="fa-solid fa-trash-can"></i>
        </button>
    </div>
</div>
<div id="listaStl">
    <div class="NomeDoProjeto">
        <h5>Nome do projeto</h5>
    </div>
    <div class="BotaoLateral">
        <!-- Botao visualizar -->
        <button type="button" class="btn btn-lg btn-block btnCrud" data-bs-toggle="modal" data-bs-target="#MyModalPesquisar">
