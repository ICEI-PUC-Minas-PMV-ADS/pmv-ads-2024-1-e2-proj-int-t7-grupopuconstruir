@model List<ServicoModel>
@{
    ViewData["Title"] = "Serviços";
}

<div id="ProjetosTitulo">
    <h1>@ViewData["Title"]</h1>
    <a class="btn btn-dark btn-lg btn-block" asp-controller="Servico" asp-action="Criar">Adicionar serviço +</a>
</div>

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<div>
    @if (Model != null && Model.Any())
    {
        foreach (ServicoModel servicos in Model)
        {
            <div id="listaStl">
                <div class="NomeDoProjeto">
                    <h5>@servicos.Nome</h5>
                </div>
                <div class="BotaoLateral">
                    <!-- Botao ver detalhes do servico -->
                    <a asp-area="" asp-route-id="@servicos.Id" asp-controller="Servico" asp-action="Visualizar" type="button" class="btn btn-lg btn-block btnCrud">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </a>

                    <!-- Botao para editar detalhes do servico -->
                    <a asp-area="" asp-route-id="@servicos.Id" asp-controller="Servico" asp-action="Editar" type="button" class="btn btn-lg btn-block btnCrud">
                        <i class="fa-solid fa-pencil"></i>
                    </a>

                    <!-- Botao para deletar o servico -->
                    <a asp-area="" asp-route-id="@servicos.Id" asp-controller="Servico" asp-action="Deletar" type="button" class="btn btn-lg btn-block btnCrud">
                        <i class="fa-solid fa-trash-can"></i>
                    </a>
                </div>
            </div>
        }
    }

</div>