@{
    ViewBag.Title = "EditarServico";
}
<h1>Editar o serviço</h1>

<form>
    <div class="mb-3">
        <label for="editarServico" class="form-label"><h5>Indique um novo nome para serviço</h5></label>
        <input type="text" class="form-control" id="editrServico">
        <div class="form-text">Ao clicar em "Alterar", o novo nome do serviço será substituído."</div>
    </div>

    <button type="submit" class="btn btn-dark" data-bs-target="#adicionarServico">Alterar</button>
    <a type="button" class="btn btn-secondary" asp-controller="Servico" asp-action="Index">Cancelar</a>
</form>

